{
	"$schema": "https://json.schemastore.org/package.json",
	"version": "0.0.1",
	"project": "fintech-wallet1",
	"name": "currency-exchange-api",
	"title": "Currency Exchange API",
	"description": "A NestJS API for currency exchange",
	"scripts": {
		"start:dev": "env -e dev -m debug --log debug : vite-node --watch src/main.ts",
		"start:release": "env -e release -m debug : vite-node --watch src/main.ts",
		"build": "env -m build : vite build",
		"preview": "pnpm build & env -e dev -m build : node dist/main",
		"test:dev": "env -e dev -m test : vitest",
		"test:release": "env -e release -m test : vitest",
		"test:bench": "vitest bench",
		"test:mutation": "env -e dev -m test : stryker run",
		"env:schema": "env schema -e dev -m build",
		"lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
		"format": "prettier --cache --write **/*.{ts,cts,mts,json,md,yml,yaml}",
		"clean": "pnpx del-cli dist .reports **/*.tsbuildinfo .rollup.cache .swc .node_modules"
	},
	"imports": {
		"#libs/zod": "./src/libs/zod/index.ts",
		"#libs/http": "./src/libs/http/index.ts",
		"#libs/decorators": "./src/libs/decorators/index.ts",
		"#testing": "./src/__tests__/index.ts",
		"#db": "./src/database/default/index.ts"
	},
	"dependencies": {
		"@fastify/static": "8.1.1",
		"@nestjs/common": "11.0.12",
		"@nestjs/core": "11.0.12",
		"@nestjs/platform-fastify": "11.0.12",
		"@nestjs/swagger": "11.1.0",
		"fastify": "5.2.2",
		"luxon": "3.6.1",
		"reflect-metadata": "0.2.2",
		"rxjs": "7.8.2",
		"tslib": "2.8.1",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@nestjs/testing": "11.0.12",
		"@stryker-mutator/core": "8.7.1",
		"@stryker-mutator/typescript-checker": "8.7.1",
		"@stryker-mutator/vitest-runner": "8.7.1",
		"@types/eslint": "9.6.1",
		"@types/luxon": "3.6.0",
		"@types/node": "22.13.16",
		"@v10e/env": "2.11.2",
		"@vitest/coverage-v8": "3.1.1",
		"eslint": "9.23.0",
		"eslint-config-prettier": "10.1.1",
		"eslint-plugin-perfectionist": "4.10.1",
		"eslint-plugin-prettier": "5.2.5",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-redos": "4.5.0",
		"eslint-plugin-regexp": "2.7.0",
		"eslint-plugin-sonarjs": "3.0.2",
		"eslint-plugin-unicorn": "58.0.0",
		"eslint-plugin-vitest": "0.5.4",
		"globals": "16.0.0",
		"prettier": "3.5.3",
		"terser": "5.39.0",
		"tsx": "^4.19.3",
		"type-fest": "4.38.0",
		"typescript": "5.8.2",
		"typescript-eslint": "8.29.0",
		"unplugin-swc": "1.5.1",
		"vite": "6.2.4",
		"vite-node": "3.1.1",
		"vite-plugin-checker": "0.9.1",
		"vitest": "3.1.1",
		"vitest-mock-extended": "3.0.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@nestjs/core",
			"@scarf/scarf",
			"@swc/core",
			"esbuild"
		]
	},
	"type": "module",
	"engines": {
		"node": ">=22",
		"npm": ">=10",
		"pnpm": ">=9"
	},
	"license": "MIT",
	"repository": "https://github.com/estebangarviso/nestjs-template",
	"keywords": [
		"nest",
		"fastify",
		"pnpm",
		"vite",
		"vitest",
		"typescript"
	]
}
